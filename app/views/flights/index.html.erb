<h1>Flights</h1>

<div class="search-tools">
  <%= search_form_for @q do |f| %>
    <div class="filter name">
      <%= f.text_field :location_cont, placeholder: "Drone Location" %>
    </div>
    <% end %>

<table>
  <thead>
    <tr>
      <th>Location</th>      
      <th>Camera</th>
      <th>Drone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flights.each do |flight| %>
      <tr>
        <td><%= flight.location %></td>        
        <td><%= flight.camera %></td>
        <td><%= flight.drone %></td>
        <td><%= link_to 'Show', flight %></td>
        <td><%= link_to 'Edit', edit_flight_path(flight) %></td>
        <td><%= link_to 'Destroy', flight, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Flight', new_flight_path %>
