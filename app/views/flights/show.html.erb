<div>
<% if can? :update, @flight %>
<%= link_to 'Edit', edit_flight_path(@flight) %>
<% end %>

<%= link_to 'Back', flights_path %>

<p id="notice"><%= notice %></p>
</div>

<p>
  <strong>Location:</strong>
  <%= @flight.formatted_address %>
</p>

<div class="video">
  <div class="video-wrapper">      
      <strong>Drone Video:</strong>
       <%= @flight.video_link_html %>
  </div>
</div>




<div class="sat-image"
  <p>
    <strong> 
    Drone Flight Path:
    </strong>
  </p>
  <%= image_tag @flight.flight_image.url(:thumb).to_s %>
</div>

<div>
  <p>
    <strong>Drone:</strong>
    <%= @flight.drone.model_make %>
  </p>

  <p>
    <strong>Camera:</strong>
    <%= @flight.camera.model_make %>
  </p>
</div>